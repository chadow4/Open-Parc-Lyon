{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	
	<div data-aos="fade-down" class="container">
		<div class="row">
			<div class="col-md-6 offset-md-3 text-center">
				<div class="card carder my-5 connexion">
					{{ form_start(registrationForm) }}
					<div class="text-center">
							<img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" width="200px" alt="profile">
						</div>
						<h1 class="h3 mb-3 font-weight-normal">Inscription</h1>
						<div class="content_inscription">
								{{ form_label(registrationForm.email, 'Email') }}
								{{ form_widget(registrationForm.email,{'attr': {'class': 'form-control'}}) }}
					{{ form_label(registrationForm.plainPassword, 'Mot de passe ') }}
					{{ form_widget(registrationForm.plainPassword,{'attr': {'class': 'form-control'}}, {
							label: 'Password',
						}) }}
					
					{{ form_label(registrationForm.first_name, 'Nom ') }}
					{{ form_widget(registrationForm.first_name,{'attr': {'class': 'form-control'}}) }}

					{{ form_label(registrationForm.last_name, 'Prenom ') }}
					{{ form_widget(registrationForm.last_name,{'attr': {'class': 'form-control'}}) }}
					
					{{ form_label(registrationForm.phone, 'Telephone ') }}
					{{ form_widget(registrationForm.phone,{'attr': {'class': 'form-control'}}) }}
					
				
			

					<button class="btn btn-lg btn-primary" type="submit" class="btn">Inscription</button>
					{{ form_end(registrationForm) }}
						</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
