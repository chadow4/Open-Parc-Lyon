{% set route_name = app.request.attributes.get('_route') %}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg navbar-light bg-light">
				<div class="container-fluid">
					<a class="navbar-brand logo" href="/">Open Parc</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarSupportedContent">
						<ul class="navbar-nav me-auto mb-2 mb-lg-0">
							<li class="nav-item">
								<a {% if route_name == "accueil" %} class="nav-link active" {% else %} class="nav-link" {% endif %} aria-current="page" href="{{ path('accueil') }}">Accueil</a>
							</li>
							<li class="nav-item">
								<a {% if route_name == "billetterie_tournoi" %} class="nav-link active" {% else %} class="nav-link" {% endif %} href="{{ path('billetterie_tournoi') }}">Billetterie</a>
							</li>
							<li class="nav-item">
								<a {% if route_name == "planning_tournoi" %} class="nav-link active " {% else %} class="nav-link" {% endif %} href="{{ path('planning_tournoi') }}">Planning des matchs</a>
							</li>
							{% if is_granted("ROLE_ADMIN") %}
								<li class="nav-item">
									<a class="nav-link" aria-current="" href="{{ path('admin') }}">Panel Admin</a>
								</li>
							{% endif %}
						</ul>

						<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
							{% if not is_granted("ROLE_USER") %}
								<li class="nav-item">
									<a {% if route_name == "app_register" %} class="nav-link active " {% else %} class="nav-link" {% endif %} aria-current="" href="{{ path('app_register') }}">S'enregistrer</a>
								</li>
							</li>
							<li class="nav-item">
								<a {% if route_name == "app_login" %} class="nav-link active " {% else %} class="nav-link" {% endif %} aria-current="" href="{{ path('app_login') }}">Se connecter</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a {% if route_name == "billetterie_panier" %} class="nav-link active " {% else %} class="nav-link" {% endif %} aria-current="" href="{{ path('billetterie_panier') }}"><i class="fas fa-shopping-cart"></i></a>
							</li>
							<li class="nav-item">
								<a {% if route_name == "user_show" %} class="nav-link active " {% else %} class="nav-link" {% endif %} aria-current="" href="../../user/{{ app.user.id }}">Mon compte</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" aria-current="" href="{{ path('app_logout') }}">Se déconnecter</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
	</body>
</html></header><main>
<div class="bg"></div>
{% block body  %}{% endblock %}</main><footer>

<div class="footer-right">

	<a href="#">
		<i class="fab fa-facebook-f"></i>
	</a>
	<a href="#">
		<i class="fab fa-twitter"></i>
	</a>
	<a href="#">
		<i class="fab fa-youtube"></i>
	</i>
</a>
<a href="#">
	<i class="fab fa-instagram"></i>
</i></a></body></html></div><div class="footer-left"><div class="footer-links"><a href="./index.php">Accueil</a><a href="#">Billeterie</a><a href="#">Planning des matchs</a><a href="#">Resultat</a></div><p>Open Parc &copy; 2022</p></div></footer></body><script>AOS.init();</script></html>
